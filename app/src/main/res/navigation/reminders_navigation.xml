<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reminders_navigation"
    app:startDestination="@+id/RemindersFragment">

    <fragment
        android:id="@+id/RemindersFragment"
        android:name="com.example.mathwiz.ui.reminders.RemindersFragment"
        android:label="@string/title_reminders"
        tools:layout="@layout/fragment_reminders" >
        <action
            android:id="@+id/action_navigation_reminders_to_addReminderFragment"
            app:destination="@id/addReminderFragment" />
        <action
            android:id="@+id/action_navigation_reminders_to_editReminderFragment"
            app:destination="@id/editReminderFragment" />
    </fragment>
    <fragment
        android:id="@+id/addReminderFragment"

        android:name="com.example.mathwiz.ui.reminders.AddReminderFragment"
        android:label="Add Reminder"
        tools:layout="@layout/fragment_add_reminder" />
    <fragment
        android:id="@+id/editReminderFragment"
        android:name="com.example.mathwiz.ui.reminders.EditReminderFragment"
        android:label="Edit Reminder"
        tools:layout="@layout/fragment_edit_reminder" />

</navigation>